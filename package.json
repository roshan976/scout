{
  "name": "scout",
  "version": "1.0.0",
  "description": "Internal Slackbot for Arrow knowledge access",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "slack": "node slack-bot.js",
    "slack:dev": "node --watch slack-bot.js",
    "both": "concurrently \"npm start\" \"npm run slack\"",
    "both:dev": "concurrently \"npm run dev\" \"npm run slack:dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "health": "curl -f http://localhost:${PORT:-3000}/health || echo 'Server not responding'",
    "setup": "node -e \"console.log('ðŸš€ Scout Setup Complete! See README.md for next steps.')\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop scout-server scout-slack-bot",
    "pm2:restart": "pm2 restart scout-server scout-slack-bot",
    "pm2:logs": "pm2 logs",
    "validate": "node -e \"require('./src/config.js'); console.log('âœ… Configuration valid')\"",
    "monitor": "./scripts/monitor.sh",
    "cleanup": "./scripts/cleanup.sh",
    "postinstall": "node -e \"console.log('ðŸ“¦ Dependencies installed. Run npm run setup for next steps.')\""
  },
  "keywords": [
    "slack",
    "bot",
    "openai",
    "knowledge",
    "assistant",
    "enterprise",
    "document-search",
    "ai-assistant"
  ],
  "author": "Arrow",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/scout.git"
  },
  "bugs": {
    "url": "https://github.com/yourorg/scout/issues"
  },
  "homepage": "https://github.com/yourorg/scout#readme",
  "dependencies": {
    "@slack/bolt": "^3.14.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
